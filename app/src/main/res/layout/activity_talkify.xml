<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TalkifyActivity">

    <!-- Main content: Chat UI -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Chat UI area -->
        <LinearLayout
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Chat header (Example: Name, Channel/User Info) -->
            <TextView
                android:id="@+id/chatHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:text="Selected Chat (User/Channel)" />

            <!-- Chat messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="always"
                android:orientation="vertical" />

            <!-- Message input area -->
            <LinearLayout
                android:id="@+id/messageInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Write a message..." />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Sliding panel with User and Channel lists -->
    <LinearLayout
        android:id="@+id/leftPanel"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_gravity="start"
        android:elevation="4dp">

        <!-- Toggle button to hide/show panel -->
        <Button
            android:id="@+id/toggleLeftPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:text="Toggle List View"
            android:gravity="center" />

        <!-- Friends list (User List fragment container) -->
        <FrameLayout
            android:id="@+id/friendsFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <!-- Group chats list (Channel List fragment container) -->
        <FrameLayout
            android:id="@+id/groupChatsFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>